# .pnpmrc - PNPM 8 configuration file for Node 22 compatibility
node-linker=hoisted
strict-peer-dependencies=false
auto-install-peers=true
resolution-mode=highest
hoist-pattern[]=*
package-lock=false
modules-check=false
registry-supports-lookup=false
save-prefix=^
shamefully-hoist=true
use-node-version=22
engine-strict=true

# Performance tuning
child-concurrency=16
network-concurrency=32
prefer-frozen-lockfile=true

# FontAwesome registry settings
@awesome.me:registry=https://npm.fontawesome.com/
@fortawesome:registry=https://npm.fontawesome.com/
